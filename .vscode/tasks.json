/*
 * MSVC++ Compiler options
 * https://docs.microsoft.com/en-us/cpp/build/reference/compiler-options-listed-by-category?view=msvc-160
 */
{
    "tasks": [
        { // New debug build
            "type": "shell",
            "label": "msvc++: [x64_Debug] build",
            "command": "cl.exe",
            "args": [
                "/std:c++latest",
                "/DEBUG",
                "/EHsc",
                "/MTd",
                "/W3",
                "/Zi",
                "/MP",
                "/Fe:",
                "${workspaceFolder}/build/vkgame.exe",
                "${workspaceFolder}/src/*.cpp",
                // "${workspaceFolder}/vendor/tinyobjloader/tiny_obj_loader.cc",
                "/I","${workspaceFolder}/vendor/Vulkan/1.2.198.1/Include", // your VULKAN SDK path
                "/I","${workspaceFolder}/vendor/SDL2/include",
                "/I","${workspaceFolder}/vendor/glm",
                "/I","${workspaceFolder}/vendor/stb_image",
                // "/I","${workspaceFolder}/vendor/tinyobjloader",
                "/I", "${workspaceFolder}/src",
                "/I","${workspaceFolder}/src/vma",
                //
                "/link",
                "/INCREMENTAL:no",
                "/verbose:incr",
                "/time+",
                "/LIBPATH:${workspaceFolder}/vendor/SDL2/lib/x64",
                "/LIBPATH:${workspaceFolder}/vendor/Vulkan/1.2.198.1/Lib", // path to your VulkanSDK installation
                "vulkan-1.lib",
                "SDL2.lib",
                "SDL2main.lib",
                "Shell32.lib", // for dragDrop
                // "Ole32.lib",
                "/SUBSYSTEM:CONSOLE"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        { // New release build
            "type": "shell",
            "label": "msvc++: [x64_Release] build",
            "command": "cl.exe",
            "args": [
                // "/Bt+",
                "/std:c++latest",
                "/EHsc",
                "/MT",
                // "/O2",
                "/GL",
                "/MP",
                "/Fe:",
                "${workspaceFolder}/build/vkgame_release.exe",
                "${workspaceFolder}/src/*.cpp",
                // "${workspaceFolder}/vendor/tinyobjloader/tiny_obj_loader.cc",
                "/I","${workspaceFolder}/vendor/Vulkan/1.2.198.1/Include", // VulkanSDK Include Path
                "/I","${workspaceFolder}/vendor/SDL2/include",
                "/I","${workspaceFolder}/vendor/glm",
                "/I","${workspaceFolder}/vendor/stb_image",
                // "/I", "${workspaceFolder}/vendor/tinyobjloader",
                "/I","${workspaceFolder}/src",
                "/I","${workspaceFolder}/src/vma",
                "/link",
                // "/INCREMENTAL:yes",
                "/verbose:incr",
                "/time+",
                "/LIBPATH:${workspaceFolder}/vendor/SDL2/lib/x64",
                "/LIBPATH:${workspaceFolder}/vendor/Vulkan/1.2.198.1/Lib", // path to your VulkanSDK installation
                "vulkan-1.lib",
                "SDL2main.lib",
                "SDL2.lib",
                "Shell32.lib", // for dragDrop
                // "Ole32.lib",
                "/SUBSYSTEM:CONSOLE"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },

